<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.tc2r.greedisland.map.StartingPoint"
    android:layout_marginTop="30dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_gravity="center_horizontal">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?backgroundPri"

            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_Home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="SET HOMETOWN "
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_loc_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="The Windy City of"
                    android:textAlignment="center"
                    android:textSize="28dp"
                    android:textStyle="italic"
                    />

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"/>


                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Chicago"
                    android:textAlignment="center"
                    android:textSize="36dp"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/tv_TRAVEL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="TRAVEL"
                    android:textAlignment="center"
                    android:textSize="36dp"
                    android:textStyle="bold"
                    android:clickable="true"
                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_marginTop="30dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?backgroundSec"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:contentPadding="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <TextView
                android:id="@+id/tv_location_desc"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_location"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"

                android:ems="10"

                android:maxLines="30"
                android:singleLine="false"
                android:text="The windy city is a city of wind. Made famous by the fact that it is a city of wind may the winds never stop winning wind wind blah blah blah."
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
