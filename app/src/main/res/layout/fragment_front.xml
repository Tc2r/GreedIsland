<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tc2r.greedisland.FrontFragment">


    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/lay_options"
            style="?backgroundPri"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:contentPadding="6dp">

            <FrameLayout
                style="?backgroundSec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="2dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1">


                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="top"
                            android:layout_marginRight="2dp"
                            android:layout_weight="2"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="2dp"

                            >

                            <TextView
                                android:id="@+id/tv_map"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha=".8"
                                android:background="@drawable/logo_red_long"
                                android:gravity="left|bottom"
                                android:text="GREED ISLAND"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@android:color/white"/>
                        </android.support.v7.widget.CardView>

                        <ImageView
                            android:id="@+id/image_map"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#80741507"
                            android:src="@drawable/logo_red"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/image_book"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#80113884"
                            android:src="@drawable/logo_blue"/>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="2"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="2dp"

                            >

                            <TextView
                                android:id="@+id/tv_book"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha=".8"
                                android:background="@drawable/logo_blue_long2"
                                android:gravity="right|bottom"
                                android:text="BOOK  "
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@android:color/white"/>

                        </android.support.v7.widget.CardView>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lay_settings"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1">

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="2dp"
                            android:layout_weight="2"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="1dp"
                            app:cardElevation="1dp"
                            >

                            <TextView
                                android:id="@+id/tv_settings"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha=".8"
                                android:background="@drawable/logo_green_long"
                                android:gravity="left|bottom"
                                android:text="SETTINGS"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@android:color/white"/>
                        </android.support.v7.widget.CardView>

                        <ImageView
                            android:id="@+id/image_settings"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#8006450e"
                            android:src="@drawable/logo_green"/>

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_options"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:contentPadding="6dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                style="?backgroundPri"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/finaleeta"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:text="Welcome Hunter!"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:textAppearance="@android:style/TextAppearance.Medium" />

                    <TextView
                        android:text="Hunter: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/statusHuntName"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Small"/>
                    <TextView
                        android:text="Hunter: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/statusLangName"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Small"/>
                    <TextView
                        android:text="ID Number: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/statusIdNumber"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Small"/>
                    <TextView
                        android:text="HomeTown: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/statusBaseTown"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Small"/>
                    <TextView
                        android:text="Location: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/statusLocation"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Small"/>
                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>