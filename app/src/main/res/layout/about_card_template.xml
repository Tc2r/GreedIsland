<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#000000"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#c8c9b3"
            android:orientation="horizontal"


            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/card_top"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp"

                >

            <TextView
                android:id="@+id/card_designation"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/card_title"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical"
                android:lines="2"
                android:maxLines="2"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/card_ranklimit"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                />
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="332dp"
            android:layout_height="187dp"
            android:layout_marginBottom="16dp"
            android:background="#c8c9b3"
            android:gravity="center"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="322dp"
                android:layout_height="181dp"
                android:layout_gravity="center"
                android:background="#fdec00"
                android:foregroundGravity="center"
                android:src="@drawable/placeholder"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_border_layout"
            android:layout_width="336dp"
            android:layout_height="191dp"
            android:background="@drawable/text_border_free"
            android:orientation="vertical"
            android:padding="10dp"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#000000"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="#d0d5d4">

                    <TextView
                        android:id="@+id/card_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#d0d5d4"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        />


                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#d0d5d4"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/icon_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/icon_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/icon_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/icon_5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>