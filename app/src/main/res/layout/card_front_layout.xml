<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#000000"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#c8c9b3"
            android:orientation="horizontal"


            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/card_top"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp"

                >

            <TextView
                android:id="@+id/card_designation"
                android:layout_width="80dp"
                android:layout_height="match_parent"

                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/card_title"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="TITLE"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/card_ranklimit"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="SS-3"
                android:textSize="20dp"
                android:textStyle="bold"
                />
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="332dp"
            android:layout_height="187dp"
            android:layout_marginBottom="16dp"
            android:background="#c8c9b3"
            android:padding="5dp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="322dp"
                android:layout_height="181dp"
                android:background="#fdec00"
                android:src="@drawable/img_placeholder"
                android:layout_gravity="center"
                android:foregroundGravity="center"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_border_layout"
            android:layout_width="336dp"
            android:layout_height="191dp"
            android:background="@drawable/text_border_free"
            android:orientation="vertical"
            android:padding="10dp"


            >

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/card_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#d0d5d4"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:textColor="@android:color/black"
                    android:text="This is where the description of the card goes."
                    android:textSize="17sp"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>